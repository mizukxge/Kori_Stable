FROM node:18-alpine AS builder

WORKDIR /app

# Accept API URL at build time, default to production API
ARG VITE_API_URL=https://kori-api-production.up.railway.app
ENV VITE_API_URL=$VITE_API_URL

# Install pnpm
RUN npm install -g pnpm

# Copy root package files
COPY pnpm-lock.yaml package.json pnpm-workspace.yaml ./

# Copy web app
COPY apps/web ./apps/web
COPY apps/api/package.json ./apps/api/

# Install dependencies (skip build scripts for API postinstall)
RUN pnpm install --ignore-scripts

# Build web app with API URL from environment
# VITE_API_URL is set as env var above and will be substituted by Vite during build
RUN pnpm --filter @kori/web build

# Production stage
FROM node:18-alpine

WORKDIR /app

RUN npm install -g pnpm

# Copy necessary files from builder
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/apps/web/dist ./dist
COPY --from=builder /app/apps/web/package.json ./package.json
COPY --from=builder /app/pnpm-lock.yaml ./pnpm-lock.yaml
COPY --from=builder /app/package.json ./package.json

# Expose port
EXPOSE 3000

# Start with preview server (specify the web workspace)
CMD ["pnpm", "--filter", "@kori/web", "preview"]
