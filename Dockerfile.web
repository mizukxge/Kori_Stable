FROM node:18-alpine AS builder

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy root package files
COPY pnpm-lock.yaml package.json pnpm-workspace.yaml ./

# Copy web app
COPY apps/web ./apps/web
COPY apps/api/package.json ./apps/api/

# Install dependencies (skip build scripts for API postinstall)
RUN pnpm install --ignore-scripts

# Build web app with production API URL
# Set VITE_API_URL as environment variable before build so Vite can substitute it
RUN VITE_API_URL=https://kori-api-production.up.railway.app pnpm --filter @kori/web build

# Production stage - use simple HTTP server to serve static files
FROM node:18-alpine

WORKDIR /app

# Install serve to serve the static build
RUN npm install -g serve

# Copy only the dist folder (built static files)
COPY --from=builder /app/apps/web/dist ./dist

# Expose port
EXPOSE 3000

# Serve the static build with SPA routing (rewrites to index.html for React Router)
CMD ["serve", "-s", "dist", "-l", "3000"]
