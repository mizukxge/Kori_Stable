FROM node:18-alpine

WORKDIR /app

# Install pnpm and serve
RUN npm install -g pnpm serve

# Copy package files
COPY pnpm-lock.yaml package.json pnpm-workspace.yaml ./

# Copy source files
COPY apps/web ./apps/web
COPY apps/api/package.json ./apps/api/

# Install dependencies
RUN pnpm install --frozen-lockfile --ignore-scripts

# Build web app - Force rebuild with timestamp
RUN echo "Building at $(date)" && \
    VITE_API_URL=https://kori-api-production.up.railway.app \
    pnpm --filter @kori/web build

# Verify build output and create simple dist structure for serve
RUN echo "=== Dist directory contents ===" && \
    ls -la /app/apps/web/dist/ && \
    echo "=== index.html preview ===" && \
    head -20 /app/apps/web/dist/index.html && \
    mkdir -p /app/server && \
    cp -r /app/apps/web/dist /app/server/

# Expose port
EXPOSE 3000

# Serve the static build with SPA routing
CMD ["serve", "-s", "server/dist", "-l", "3000"]
