FROM node:22-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy everything
COPY . .

# Install dependencies
RUN pnpm install --frozen-lockfile

# Generate Prisma client
RUN pnpm --filter @kori/api db:generate

# Expose port
EXPOSE 3001

# Start API
CMD ["pnpm", "--filter", "@kori/api", "start"]
