FROM node:22-alpine

WORKDIR /app

# Install pnpm
RUN npm install -g pnpm

# Copy everything
COPY . .

# Install dependencies
RUN pnpm install

# Generate Prisma client (use dummy DATABASE_URL for build-time generation)
RUN DATABASE_URL="postgresql://dummy:dummy@localhost/dummy" pnpm --filter @kori/api db:generate

# Expose port
EXPOSE 3001

# Start API
CMD ["pnpm", "--filter", "@kori/api", "start"]
